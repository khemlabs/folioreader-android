<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="155dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/top_buttons"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/view_config_ib_day_mode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@android:color/transparent"
            android:src="@drawable/icon_sun_normal" />

        <ImageButton
            android:id="@+id/view_config_ib_night_mode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@android:color/transparent"
            android:src="@drawable/icon_moon_normal" />
    </LinearLayout>

    <View
        android:id="@+id/first_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_color" />

    <LinearLayout
        android:id="@+id/fontLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="4.0">

        <com.folioreader.view.StyleableTextView
            android:id="@+id/view_config_font_andada"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@string/andada"
            android:textSize="17sp"
            app:folio_font="@string/andada_font" />

        <com.folioreader.view.StyleableTextView
            android:id="@+id/view_config_font_lato"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@string/lato"
            android:textSize="17sp"
            app:folio_font="@string/lato_font" />

        <com.folioreader.view.StyleableTextView
            android:id="@+id/view_config_font_lora"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@string/lora"
            android:textSize="17sp"
            app:folio_font="@string/lora_font" />

        <com.folioreader.view.StyleableTextView
            android:id="@+id/view_config_font_raleway"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@string/raleway"
            android:textSize="17sp"
            app:folio_font="@string/raleway_font" />
    </LinearLayout>

    <View
        android:id="@+id/second_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_color" />

    <RelativeLayout
        android:id="@+id/font_size_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/small_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:src="@drawable/icon_font_small" />

        <SeekBar
            android:id="@+id/view_config_font_size_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/small_font"
            android:layout_toLeftOf="@+id/big_font"
            android:layout_toRightOf="@+id/small_font"
            android:layout_toStartOf="@+id/big_font"
            android:max="4"
            android:maxHeight="0.2dp"
            android:minHeight="0.2dp"
            android:padding="16dp" />

        <ImageView
            android:id="@+id/big_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:src="@drawable/icon_font_big" />
    </RelativeLayout>

    <View
        android:id="@+id/third_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_color"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/orientationLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="4.0">

        <com.folioreader.view.StyleableTextView
            android:id="@+id/btn_vertical_orientation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@string/orientation_vertical"
            android:textColor="@drawable/font_text_selector"
            android:textSize="17sp"
            app:folio_font="@string/andada_font" />

        <com.folioreader.view.StyleableTextView
            android:id="@+id/btn_horizontal_orientation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@string/orientation_horizontal"
            android:textColor="@drawable/font_text_selector"
            android:textSize="17sp"
            app:folio_font="@string/lato_font" />
    </LinearLayout>
</LinearLayout>